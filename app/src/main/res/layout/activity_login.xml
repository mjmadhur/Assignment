<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="40sp"
            app:lottie_rawRes="@raw/signin"
            app:lottie_autoPlay="true"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:fontFamily="@font/poppins_bold"
            android:text="Sign In"
            android:textAlignment="center"
android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="7sp"
            android:textColor="@color/fifth_colour"

            android:textColorHint="@color/fifth_colour"
            app:boxStrokeColor="@color/fifth_colour"
            app:endIconMode="clear_text"
            app:endIconTint="@color/fifth_colour"
            app:startIconTint="@color/fifth_colour"

            app:hintTextColor="@color/fifth_colour">

            <EditText
                android:id="@+id/et_email_signTn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:textSize="16sp"
                android:layout_marginBottom="20sp"
                android:imeOptions="actionGo"
                android:cursorVisible="true"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="7sp"
            android:textColor="@color/fifth_colour"
            android:textColorHint="@color/fifth_colour"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/fifth_colour"
            app:boxStrokeColor="@color/fifth_colour"
            app:startIconTint="@color/fifth_colour"

            app:hintTextColor="@color/fifth_colour">

            <EditText
                android:id="@+id/et_password_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                android:layout_marginBottom="20sp"
                android:imeOptions="actionGo"
                android:cursorVisible="true"
                android:inputType="textWebPassword"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/poppins_light"
                android:text="Forget your Password?"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="16sp"
                android:text="Recover it"
                android:paddingLeft="10sp"
                android:textColor="@color/fifth_colour"
                android:textSize="16sp" />
        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/fifth_colour"

            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:layout_marginTop="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginTop="16sp"
                android:text="Don't have an account? "
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_signUp"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16sp"
                android:text="Sign Up"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="10sp"
                android:textColor="@color/fifth_colour"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>

</FrameLayout>